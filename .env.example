# Variables d'environnement pour le serveur OpenVPN distant

# Configuration du serveur B (OpenVPN)
VPN_SERVER_HOST=your-vpn-server-ip
VPN_SERVER_PORT=22
VPN_SERVER_USER=your-ssh-username
VPN_SERVER_PASSWORD=your-ssh-password
# Ou utilisez une clé SSH (recommandé)
VPN_SERVER_KEY_PATH=/path/to/your/ssh/private/key

# Configuration du container OpenVPN
VPN_CONTAINER_NAME=openvpn-server

# Configuration de l'application web
WEB_PORT=3000
WEB_HOST_PORT=3001
WEB_USERNAME=admin
WEB_PASSWORD=your-secure-password

# Optionnel: Configuration SSL
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
